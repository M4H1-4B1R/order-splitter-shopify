datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
  firstName   String?
  lastName    String?
  email       String?
  accountOwner Boolean?
  locale      String?
  collaborator Boolean?
  emailVerified Boolean?
}

model AppSettings {
  id              Int     @id @default(autoincrement())
  shop            String  @unique
  splittingEnabled Boolean @default(true)
}

model LocationMapping {
  id            Int     @id @default(autoincrement())
  shop          String
  locationCode  String
  locationGid   String

  @@unique([shop, locationCode])
}

model SplitLog {
  id              Int      @id @default(autoincrement())
  shop            String
  originalOrderId String
  splitOrderIds   String? // Comma-separated list of new order IDs
  retained        Boolean
  message         String
  createdAt       DateTime @default(now())
}
